<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.becks.materia.aboutus">
    <include layout="@layout/app_bar2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:src="@drawable/foodly2"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Foodly Fast Food"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#212121"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="twevebaraka48@yahoo.com"
        android:textColor="#212121"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Mzumbe University"
        android:textColor="#212121"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_registerLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Baraka Tweve"
        android:textColor="#212121"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="+255 657536810"
        android:textColor="#212121"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
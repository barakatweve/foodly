<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.becks.materia.MainActivity"
    tools:showIn="@layout/activity_main">




        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginText"
            android:hint="Firstname"
            android:focusable="true"
            android:textColorHighlight="#ff7eff15"
            android:textColorHint="#414141"
            android:layout_marginTop="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <EditText
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/logPassTxt"
            android:layout_below="@+id/loginText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/loginText"
            android:layout_alignEnd="@+id/loginText"
            android:textColorHint="#414141"
            android:hint="Password" />

        <Button
            android:layout_marginTop="20dp"
            android:onClick="signUp"
            android:textColor="#f9f4f4"
            android:background="#009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/txt_login"
            android:layout_below="@+id/logPassTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textSize="20dp"
            android:textColor="#ff3446"
            android:onClick="registerhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?SignUp"
            android:id="@+id/textRegister"
            android:layout_below="@+id/txt_login"
            android:layout_marginTop="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />



</RelativeLayout>
